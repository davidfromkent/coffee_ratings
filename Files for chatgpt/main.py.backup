# ADD REVIEW FORM
@app.get("/reviews/new", response_class=HTMLResponse)
def new_review_form(
    request: Request,
    venue_id: Optional[int] = None,
    db: Session = Depends(get_db)
):
    venue = None
    if venue_id is not None:
        venue = db.query(models.Venue).filter(models.Venue.id == venue_id).first()

    referer = request.headers.get("referer", "")

    # If a venue_id exists → back to that venue
    if venue_id is not None:
        back_url = f"/venues/{venue_id}"
    else:
        # If reached directly from Home → back to Home
        back_url = "/"

    return templates.TemplateResponse(
        "new_review.html",
        {
            "request": request,
            "venue": venue,
            "title": "Add Review",
            "back_url": back_url
        }
    )


# ADD REVIEW SUBMISSION
@app.post("/reviews/new")
def create_review(
    reviewer_name: str = Form(...),
    venue_name: str = Form(...),
    location: str = Form(...),
    coffee: int = Form(...),
    cost: int = Form(...),
    service: int = Form(...),
    hygiene: int = Form(...),
    ambience: int = Form(...),
    food: int = Form(...),
    notes: str = Form(""),
    visit_date: str = Form(...),
    db: Session = Depends(get_db),
):

    # Find or create venue
    existing = db.query(models.Venue).filter(
        models.Venue.name.ilike(venue_name),
        models.Venue.location.ilike(location)
    ).first()

    if existing:
        venue = existing
    else:
        venue = models.Venue(name=venue_name, location=location)
        db.add(venue)
        db.commit()
        db.refresh(venue)

    # Score logic
    scores = [coffee, cost, service, hygiene, ambience]
    if food != 0:
        scores.append(food)

    total_score = sum(scores)
    category_count = len(scores)

    # Create Review
    review = models.Review(
        venue_id=venue.id,
        venue_name_raw=venue_name,
        venue_location_raw=location,
        reviewer_name=reviewer_name,
        coffee=coffee,
        cost=cost,
        service=service,
        hygiene=hygiene,
        ambience=ambience,
        food=food,
        total_score=total_score,
        category_count=category_count,
        notes=notes,
        visit_date=visit_date
    )

    db.add(review)
    db.commit()

    # Update venue averages
    update_venue_averages(db, venue.id)

    # Go back to Reviews list
    return RedirectResponse(url="/reviews", status_code=303)
